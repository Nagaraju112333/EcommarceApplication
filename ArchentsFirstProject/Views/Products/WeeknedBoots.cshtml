@model  ArchentsFirstProject.Models.Product
@{
    ViewBag.Title = "WeeknedBoots";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <script src="https://code.jquery.com/jquery-3.6.1.js"
            integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI="
            crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  
    <style>
        #homeAndCreateLink {
            margin-left: 5px;
            margin-bottom: 50px;
        }
        .Main{
            height:500px;

            display:flex;

        }
        .LeftBoot{
            width:700px;
        }
        .RightBoot{

        }
        .size-radio-btn{
            display:inline-block;
            width:40px;
            height:40px;
            text-align:center;
            font-size:20px;
            border:1px solid #383838;
            border-radius:50px;
            margin:10px;
            line-height:40px;
            text-transform:uppercase;
            color:#383838;
            cursor:pointer;

        }
        @*.size-radio-btn.check{
            background-color:#383838;
            color:#fff;
        }*@
        .size-radio-btn.check{
           background:#383838;
            color:#fff;
        }
    </style>
</head>
<body>
    <div>
        <div id="homeAndCreateLink" style=" background-color:#EFEFEF;">
            @Html.ActionLink("Home/", "Home", "Home", new { style = "text-decoration:none; color:#686363" })
            @Html.ActionLink("The Weekend Boot is back", "Home", "Home", new { style = "text-decoration:none; color:#686363" })

        </div>
    </div>
    <div class="Main">
        <div class="LeftBoot">
            <h1>Welcome</h1>
        </div>
        <div class="RightBoot">
            <h1>The Weekend Boot in Black</h1>
            <h3 style="color:black;">Rs. 16,500.00</h3>
            <h6>The Weekend Boots are vegan and sustainably made with over 95% natural and recycled</h6>
            <h6>materials. They keep you cozy and dry all year and comfy all day. Their minimalist design is made</h6>
            <h6>to take you wherever your day ends up - on a trail, in the park or at brunch, they’ve got you</h6>
            <h6>covered.</h6>
            <div class="stars">
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <p>12 reviews</p>
            </div>
            <div>
                <h2>Options</h2>
            </div>
            <div class="Sizes">
                <input type="radio" name="size" value="36" checked hidden id="s-size" />
                <label for="s-size" class="size-radio-btn check">36</label>
                <input type="radio" name="size" value="37" hidden id="m-size" />
                <label for="m-size" class="size-radio-btn">37</label>
                <input type="radio" name="size" value="38" hidden id="m-size" />
                <label for="m-size" class="size-radio-btn">38</label>
                <input type="radio" name="size" value="40" hidden id="m-size" />
                <label for="m-size" class="size-radio-btn">40</label>
                <input type="radio" name="size" value="41" hidden id="m-size" />
                <label for="m-size" class="size-radio-btn">42</label>
                <input type="radio" name="size" value="43" hidden id="m-size" />
                <label for="m-size" class="size-radio-btn">43</label>
                <input type="radio" name="size" value="44" hidden id="m-size" />
                <label for="m-size" class="size-radio-btn">44</label>
            </div>
        </div>
    </div>
    <script>
        const SizeBtn = document.querySelectorAll('.size-radio-btn');
        let checkBtn =0;
        SizeBtn.forEach((item, i) => {
            item.addEventListener('click', () => {
                SizeBtn[checkBtn].classList.remove('check');
                item.classList.add('check');
                checkBtn = i;
            })
        })
    </script>
   
</body>
</html>
